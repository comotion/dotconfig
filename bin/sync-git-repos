#!/bin/sh
TARGET=/git
SOURCE=/var/git

mountpoint $SOURCE > /dev/null
[ ! $? -eq 0 ] && echo "${0}: ${SOURCE} is not mounted" && exit 0

cd $TARGET

for r in $SOURCE/*; do
    if [ -d $(basename $r) ]; then
        cd $(basename $r);
        git fetch -q --all;
        git reset --soft
        cd ..
    else
        git clone $r --bare
    fi
	done

# Cleanup non existing repos
for r in $TARGET/*; do
    [ ! -d $SOURCE/$(basename $r) ] && rm -r $r
done
