#!/bin/bash
cd ~/

if [[ -z "${DEVSTORAGE}" ]]
then
	echo "You need to specify the path to DEVSTORAGE"
	exit 1
fi

if [[ -z "${DEVSOURCE}" ]]
then
	echo "You need to specify the path to DEVSOURCE"
	exit 1
fi

if [[ ! -d ${DEVSTORAGE} ]]
then
	echo "DEVSTORAGE: '${DEVSTORAGE}' does not exists. Did you mount shared storage?"
	exit 1
fi

if [[ ! -d ${DEVSOURCE} ]]
then
	echo "DEVSOURCE: '${DEVSOURCE}' does not exists. Did you mount shared storage?"
	exit 1
fi

if [[ ! -h "Documents" ]]
then
	ln -sfn ${DEVSTORAGE}documents $!
fi 

if [[ ! -h "Downloads" ]]
then
	ln -sfn ${DEVSTORAGE}downloads Downloads
fi

if [[ ! -h "Music" ]]
then
	ln -sfn ${DEVSTORAGE}downloads/music Music
fi

if [[ ! -h "Pictures" ]]
then
	ln -sfn ${DEVSTORAGE}pictures Pictures
fi

if [[ ! -h ".vim" ]]
then
	ln -sfn ${DEVSOURCE}share/vim/ .vim
fi

if [[ ! -h ".vimrc" ]]
then
	ln -sfn ${DEVSOURCE}share/vim/.vimrc .vimrc
fi

if [[ ! -h ".profile" ]]
then
	ln -sfn ${DEVSOURCE}share/.profile .profile
fi

if [[ ! -h ".bashrc" ]]
then
	ln -sfn ${DEVSOURCE}share/.profile .bashrc
fi

exit 0

