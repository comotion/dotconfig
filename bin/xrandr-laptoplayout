 #!/bin/sh
echo $1 | grep -P "[0-9]+x[0-9]+$" && mode=$1
mode=${mode:="1920x1200"}

pos=$(echo $mode | awk -Fx '{print $1}')

posVGA="${pos}x0"
posLVDS="0x0"

[[ "left" == "$2" ]] && posVGA="0x0" && posLVDS="${pos}x0"

echo "Enabling mode: ${mode} on VGA-0"
xrandr --output VGA-0 --mode $mode --pos $posVGA  --rotate normal --output LVDS --mode 1280x800 --pos $posLVDS --rotate normal --output DVI-0 --off
